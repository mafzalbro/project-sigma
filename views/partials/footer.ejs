<footer class="bg-gray-900 text-white text-center p-4">
  <div class="mb-4">
    <h4 class="text-lg font-semibold">Tools</h4>
    <ul class="flex flex-wrap justify-center list-none p-0">
      <% tools.forEach(tool => { %>
        <li class="flex flex-col items-start mx-4 mb-2">
          <% if (tool.tools.length > 0) { %>
            <span class="text-white font-semibold">
              <%= tool.name.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
            </span>
            <ul class="flex flex-col list-none pl-0 mt-1">
              <% tool.tools.forEach(subTool => { %>
                <li class="flex flex-col items-start mb-1">
                  <% if (subTool.tools.length > 0) { %>
                    <span class="text-white font-semibold">
                      <%= subTool.name.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                    </span>
                    <ul class="flex flex-col list-none pl-4 mt-1">
                      <% subTool.tools.forEach(innerTool => { %>
                        <li>
                          <a href="/tools/<%= tool.name %>/<%= subTool.name %>/<%= innerTool.name %>" class="text-white hover:text-blue-300 transition duration-200">
                            <%= innerTool.name.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                          </a>
                        </li>
                      <% }); %>
                    </ul>
                  <% } else { %>
                    <a href="/tools/<%= tool.name %>/<%= subTool.name %>" class="text-white hover:text-blue-300 transition duration-200">
                      <%= subTool.name.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                    </a>
                  <% } %>
                </li>
              <% }); %>
            </ul>
          <% } else { %>
            <span class="text-white font-semibold">
              <%= tool.name.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
            </span>
          <% } %>
        </li>
      <% }); %>
    </ul>
  </div>
  All rights reserved! &copy; 2024
</footer>

<style>
  footer a {
    padding: 0.5rem;
    /* Add padding around links */
  }
</style>
